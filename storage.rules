rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Recipe images - users can upload/read their own images
    // Path format: recipes/{userId}/{filename}
    match /recipes/{userId}/{allPaths=**} {
      // Allow read if authenticated
      allow read: if request.auth != null;
      
      // Allow write (create/update/delete) only if:
      // 1. User is authenticated
      // 2. User ID in path matches authenticated user
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
