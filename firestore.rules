rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Profiles collection - users can read/write their own profile
    match /profiles/{profileId} {
      allow read: if isOwner(profileId);
      allow create: if isOwner(profileId);
      allow update: if isOwner(profileId);
      allow delete: if isOwner(profileId);
    }

    // Recipes collection - users can read/write their own recipes
    match /recipes/{recipeId} {
      allow read: if isAuthenticated() && resource.data.user_id == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.user_id == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.user_id == request.auth.uid;
    }

    // Recipe content collection - users can read/write content for their own recipes
    match /recipe_content/{contentId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    // Shopping list collection
    match /shopping_list/{itemId} {
      allow read: if isAuthenticated() && resource.data.user_id == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.user_id == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.user_id == request.auth.uid;
    }

    // User inventory collection
    match /user_inventory/{itemId} {
      allow read: if isAuthenticated() && resource.data.user_id == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.user_id == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.user_id == request.auth.uid;
    }

    // Locations collection
    match /locations/{locationId} {
      allow read: if isAuthenticated() && resource.data.user_id == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.user_id == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.user_id == request.auth.uid;
    }

    // Canonical ingredients collection - read/write for all authenticated users
    match /canonical_ingredients/{ingredientId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if false; // Prevent deletion of canonical ingredients
    }

    // Recipe ingredients collection
    match /recipe_ingredients/{itemId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    // SSO tokens collection - only for token exchange
    match /sso_tokens/{tokenId} {
      allow read: if true; // Tokens need to be readable for exchange
      allow create: if isAuthenticated(); // Only authenticated users can create tokens
      allow delete: if true; // Tokens can be deleted after exchange
      allow update: if false;
    }
  }
}


